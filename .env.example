# ASTRO-BSM Order Application - Environment Variables
# Copy this file to .env and update the values for your environment

# Database Configuration for Digital Ocean
DB_HOST=your-database-host.db.ondigitalocean.com
DB_PORT=25060
DB_USER=your-db-username
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD
DB_NAME=defaultdb
DB_SSL=true

# Server Configuration
PORT=3000
NODE_ENV=production

# Admin Password for Price Editing
ADMIN_PRICE_PASSWORD=YOUR_ADMIN_PASSWORD_HERE

# Application Security
SESSION_SECRET=your-super-secret-session-key-here-change-this-in-production

# Optional: Application Settings
APP_NAME=ASTRO-BSM Order System
COMPANY_NAME=ASTRO-BSM
VAT_RATE=2.5